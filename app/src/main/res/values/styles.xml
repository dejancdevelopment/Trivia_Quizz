<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinnerThemeAnswers">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/colorBackground</item>
    </style>


    <style name="spinnerTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorBackground</item>
    </style>

    <style name="SettingsFragmentStyle">
        <item name="android:textColorSecondary">#CCC</item>
        <item name="android:textColor">#CCC</item>
        <item name="android:background">@color/colorBackground</item>
        ...
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#ffffff</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="AlertDialogDanger" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
    </style>

</resources>
